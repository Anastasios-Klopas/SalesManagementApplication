@model SalesManagementApplication.Models.Seller

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Seller</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FullName)
        </dd>
    </dl>
</div>
<div>
    @{
        foreach (var year in Model.SalesPerYearPerSeller)
        {
            <strong>Year : </strong>@year.Key;
            <hr />
            foreach (var yearNew in Model.SalesPerYearPerMonthSeller)
            {

                foreach (var month in yearNew)
                {
                    <strong>Month : </strong>@Model.MonthPerKey[month.Key];
                    <br />
                    var sum = 0m;
                    var count = 0;
                    foreach (var supply in month)
                    {
                        sum = sum + supply.TransactionAmount * 0.1m;
                        count++;
                    }
                    <strong>Supply : </strong>@sum;
                    <br />
                    <strong>Sales Count : </strong>@count;
                    <br />
                    <hr />

                }
            }
        }
    }
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
